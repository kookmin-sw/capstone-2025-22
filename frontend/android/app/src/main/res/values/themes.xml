<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- 빈 껍데기 SplashShell 테마 -->
  <style name="Theme.LetMeDrum.Splash" parent="Theme.SplashScreen">
    <item name="android:windowSplashScreenBackground">#FFD97D6C</item>
    <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_dummy_splash</item>
    <!-- 스플래시 끝난 뒤 돌아갈 테마 -->
    <item name="postSplashScreenTheme">@style/Theme.LetMeDrum</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
  </style>

    <!-- 앱의 일반 메인 테마 -->
  <style name="Theme.LetMeDrum" parent="Theme.Material3.Light.NoActionBar">
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>

</resources>
